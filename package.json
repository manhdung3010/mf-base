{
  "name": "mf-base",
  "version": "1.0.0",
  "description": "Modern Micro Frontend Architecture with Webpack 5 Module Federation",
  "private": true,
  "workspaces": [
    "apps/*",
    "shared/*",
    "infra/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "storybook": "turbo run storybook",
    "type-check": "turbo run type-check"
  },
  "keywords": [
    "micro-frontend",
    "webpack",
    "module-federation",
    "react"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.6.2",
  "devDependencies": {
    "@types/node": "^20.19.4",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/lodash": "^4.14.202",
    "@types/uuid": "^9.0.8",
    "autoprefixer": "^10.4.21",
    "css-loader": "^6.11.0",
    "eslint": "^8.0.0",
    "html-webpack-plugin": "^5.6.3",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "postcss": "^8.5.6",
    "postcss-loader": "^7.3.4",
    "prettier": "^3.0.0",
    "style-loader": "^3.3.4",
    "tailwindcss": "^3.4.17",
    "ts-loader": "^9.5.2",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3",
    "webpack": "^5.99.9",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.1",
    "zustand": "^4.5.7"
  }
}
